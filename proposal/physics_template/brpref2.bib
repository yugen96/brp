keywords = {X-rays: galaxies: clusters,cooling flows,cosmic rays,galaxies: clusters: general,instabilities},
month = {jun},
pages = {251--266},
title = {{Feedback Heating by Cosmic Rays in Clusters of Galaxies}},
url = {http://arxiv.org/abs/0706.1274 http://dx.doi.org/10.1111/j.1365-2966.2007.12692.x},
