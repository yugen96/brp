keywords = {X-rays: galaxies,black hole physics,galaxies: Seyfert,galaxies: active,line: identification,plasmas},
month = {sep},
title = {{Evidence for ultra-fast outflows in radio-quiet AGNs: II - detailed photo-ionization modeling of Fe K-shell absorption lines}},
